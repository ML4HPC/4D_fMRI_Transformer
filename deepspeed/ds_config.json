{
    "train_batch_size": 64,
    "gradient_accumulation_steps":1,    
    "fp16": {
        "enabled": true,
	"auto_cast": true
    },

    "optimizer": {
    "type": "AdamW",
    "params": {
      "lr": 0.0001,
      "betas": [
        0.8,
        0.999
      ],
      "eps": 1e-8,
      "weight_decay": 1e-7
    }
  },
    "scheduler": {
        "type": "WarmupDecayLR",
        "params": {
	    "total_num_steps": 1000000,	
            "warmup_min_lr": 0,
            "warmup_max_lr": 0.0001,
            "warmup_num_steps": 1000
        }
    }
}

